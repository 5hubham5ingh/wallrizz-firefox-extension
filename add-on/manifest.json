{

  "description": "Dynamic firefox theme using WallRizz",

  "manifest_version": 2,
  "name": "WallRizzFox",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "WallRizz@Fox",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "Toggle extension."
  },

  "permissions": ["nativeMessaging","theme"]

}
