{
  "description": "Customise firefox theme, new tab page and set wallpaper dynamically.",

  "manifest_version": 2,
  "name": "WallRizzFox",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "WallRizz@Fox",
      "strict_min_version": "58.0"
    }
  },

  "background": {
    "scripts": ["indexDB.js", "background.js"]
  },

  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "Toggle extension."
  },

  "permissions": ["history", "nativeMessaging", "theme", "storage"],

  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
